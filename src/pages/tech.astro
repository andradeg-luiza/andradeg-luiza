---
import BaseLayout from "../layouts/BaseLayout.astro"
import SectionTitle from "../components/SectionTitle.astro"
import ResponsiveGrid from "../components/ResponsiveGrid.astro"
import Card from "../components/Card.astro"

const sectionTitleClasses =
  "text-h1 md:text-h1 font-bold text-brand-wine dark:text-brand-beige tracking-tight transition-colors duration-base"

const sectionWrapper =
  "w-full max-w-5xl flex flex-col gap-6"
---
<BaseLayout title="Tecnologias">
  <main 
    class="py-paddingPage flex flex-col items-center gap-12"
    data-testid="tech-page"
  >

    <!-- Header -->
    <div 
      class="w-full max-w-5xl text-center"
      data-testid="tech-header"
    >
      <SectionTitle 
        class="items-center text-center [&>h2]:text-h1"
        title="Tecnologias e Ferramentas"
        subtitle="Uma visão geral concisa das tecnologias que aplico em QA, automação, desenvolvimento e fluxos modernos de engenharia"
        data-testid="tech-title"
      />
    </div>

    <!-- QA -->
    <section 
      class={sectionWrapper} 
      aria-labelledby="tech-qa"
      data-testid="tech-qa-section"
    >
      <h2 
        id="tech-qa" 
        class={sectionTitleClasses}
        data-testid="tech-qa-title"
      >
        QA
      </h2>

      <ResponsiveGrid data-testid="tech-qa-grid">
        <div data-testid="tech-qa-card-1">
          <Card 
            title="Práticas de Testes" 
            description="Testes exploratórios, funcionais, de regressão e integração, com análise estruturada e documentação clara."
          />
        </div>

        <div data-testid="tech-qa-card-2">
          <Card 
            title="Automação" 
            description="Automação de UI, API e performance com foco em confiabilidade e manutenibilidade. Ferramentas: Cypress, K6, Pactum, TestComplete."
          />
        </div>

        <div data-testid="tech-qa-card-3">
          <Card 
            title="Engenharia de Qualidade" 
            description="Arquitetura de testes, estratégia de cobertura, avaliação de riscos e alinhamento com fluxos de engenharia."
          />
        </div>
      </ResponsiveGrid>
    </section>

    <!-- DevTools -->
    <section 
      class={sectionWrapper} 
      aria-labelledby="tech-devtools"
      data-testid="tech-devtools-section"
    >
      <h2 
        id="tech-devtools" 
        class={sectionTitleClasses}
        data-testid="tech-devtools-title"
      >
        DevTools
      </h2>

      <ResponsiveGrid data-testid="tech-devtools-grid">
        <div data-testid="tech-devtools-card-1">
          <Card 
            title="Versionamento e Workflow" 
            description="Git, estratégias de branch e práticas de desenvolvimento colaborativo."
          />
        </div>

        <div data-testid="tech-devtools-card-2">
          <Card 
            title="APIs e Debug" 
            description="Postman, Bruno e validação de APIs com coleções estruturadas e fluxos de automação."
          />
        </div>

        <div data-testid="tech-devtools-card-3">
          <Card 
            title="Ambientes e Ferramentas" 
            description="Docker, VS Code e setups reproduzíveis para fluxos de engenharia consistentes."
          />
        </div>
      </ResponsiveGrid>
    </section>

    <!-- Front-end -->
    <section 
      class={sectionWrapper} 
      aria-labelledby="tech-frontend"
      data-testid="tech-frontend-section"
    >
      <h2 
        id="tech-frontend" 
        class={sectionTitleClasses}
        data-testid="tech-frontend-title"
      >
        Front-end
      </h2>

      <ResponsiveGrid data-testid="tech-frontend-grid">
        <div data-testid="tech-frontend-card-1">
          <Card 
            title="JavaScript e TypeScript" 
            description="Fundamentos da linguagem, fluxos assíncronos e arquiteturas tipadas para codebases escaláveis."
          />
        </div>

        <div data-testid="tech-frontend-card-2">
          <Card 
            title="Astro" 
            description="Desenvolvimento rápido e baseado em componentes para interfaces limpas e eficientes."
          />
        </div>

        <div data-testid="tech-frontend-card-3">
          <Card 
            title="TailwindCSS" 
            description="Estilização utility-first e design responsivo com estrutura visual consistente."
          />
        </div>
      </ResponsiveGrid>
    </section>

    <!-- Back-end -->
    <section 
      class={sectionWrapper} 
      aria-labelledby="tech-backend"
      data-testid="tech-backend-section"
    >
      <h2 
        id="tech-backend" 
        class={sectionTitleClasses}
        data-testid="tech-backend-title"
      >
        Back-end
      </h2>

      <ResponsiveGrid data-testid="tech-backend-grid">
        <div data-testid="tech-backend-card-1">
          <Card 
            title="Node.js e Express" 
            description="APIs, scripts de automação, ferramentas de backend e design estruturado de serviços."
          />
        </div>

        <div data-testid="tech-backend-card-2">
          <Card 
            title="Documentação de APIs" 
            description="Documentação de APIs clara e sustentável usando padrões Swagger e OpenAPI."
          />
        </div>

        <div data-testid="tech-backend-card-3">
          <Card 
            title="Práticas de Engenharia" 
            description="Testes unitários, reuso de código, design modular e arquiteturas de backend manuteníveis."
          />
        </div>
      </ResponsiveGrid>
    </section>

    <!-- CI/CD -->
    <section 
      class={sectionWrapper} 
      aria-labelledby="tech-cicd"
      data-testid="tech-cicd-section"
    >
      <h2 
        id="tech-cicd" 
        class={sectionTitleClasses}
        data-testid="tech-cicd-title"
      >
        CI/CD
      </h2>

      <ResponsiveGrid data-testid="tech-cicd-grid">
        <div data-testid="tech-cicd-card-1">
          <Card 
            title="Pipelines" 
            description="Workflows automatizados com GitHub Actions e Jenkins para validação contínua."
          />
        </div>

        <div data-testid="tech-cicd-card-2">
          <Card 
            title="Arquitetura de CI" 
            description="Paralelização, cache e confiabilidade de pipelines para entregas escaláveis."
          />
        </div>

        <div data-testid="tech-cicd-card-3">
          <Card 
            title="Observabilidade" 
            description="Logs, métricas, dashboards e quality gates para melhoria contínua."
          />
        </div>
      </ResponsiveGrid>
    </section>

  </main>
</BaseLayout>

