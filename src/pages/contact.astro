---
import BaseLayout from "../layouts/BaseLayout.astro"
import SectionTitle from "../components/SectionTitle.astro"
---

<BaseLayout title="Contact">
  <main class="py-paddingPage flex flex-col items-center gap-12">

    <SectionTitle 
      title="Contact"
      subtitle="Reach out for collaborations, engineering support, or professional opportunities"
    />

    <section class="w-full max-w-3xl flex flex-col gap-16">

      <div class="flex flex-col gap-3 border-b border-neutralTech-200 dark:border-neutralTech-800 pb-10">
        <h2 class="text-h3 font-semibold text-brand-wine dark:text-brand-beige">
          WhatsApp
        </h2>
        <p class="text-body text-neutralTech-700 dark:text-neutralTech-200">
          Direct and fast communication for projects, questions, or collaborations.
        </p>
        <a 
          href="https://wa.me/5581994563827"
          target="_blank"
          rel="noopener noreferrer"
          class="text-brand-wineMuted dark:text-neutralTech-200 hover:text-brand-wine dark:hover:text-brand-beige transition-colors duration-base font-medium text-body"
        >
          Send a message →
        </a>
      </div>

      <div class="flex flex-col gap-3 border-b border-neutralTech-200 dark:border-neutralTech-800 pb-10">
        <h2 class="text-h3 font-semibold text-brand-wine dark:text-brand-beige">
          Email
        </h2>
        <p class="text-body text-neutralTech-700 dark:text-neutralTech-200">
          For detailed inquiries, proposals, or professional conversations.
        </p>
        <a 
          href="mailto:andradeg.luiza@outlook.com"
          class="text-brand-wineMuted dark:text-neutralTech-200 hover:text-brand-wine dark:hover:text-brand-beige transition-colors duration-base font-medium text-body"
        >
          Send an email →
        </a>
      </div>

      <div class="flex flex-col gap-3">
        <h2 class="text-h3 font-semibold text-brand-wine dark:text-brand-beige">
          LinkedIn
        </h2>
        <p class="text-body text-neutralTech-700 dark:text-neutralTech-200">
          Professional profile, networking, and career‑focused communication.
        </p>
        <a 
          href="https://www.linkedin.com/in/andradegluiza/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-brand-wineMuted dark:text-neutralTech-200 hover:text-brand-wine dark:hover:text-brand-beige transition-colors duration-base font-medium text-body"
        >
          Visit profile →
        </a>
      </div>

    </section>

  </main>
</BaseLayout>
