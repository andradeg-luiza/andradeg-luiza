---
import BaseLayout from "../layouts/BaseLayout.astro"
import SectionTitle from "../components/SectionTitle.astro"
import Button from "../components/Button.astro"
import Avatar from "../components/Avatar.astro"
---

<BaseLayout title="Luiza Gusmão">
  <main class="py-paddingPage flex flex-col items-center text-center gap-10">

    <!-- Foto / Avatar -->
    <Avatar 
      src="/images/me.jpg" 
      alt="Luiza Gusmão" 
      size="xl" 
      bordered={true}
    />

    <!-- Headline principal -->
    <h1 class="text-h1 text-brand-wine max-w-3xl">
      Engineering Quality Through Clarity, Structure, and Modern Automation
    </h1>

    <!-- Subheadline -->
    <p class="text-body text-neutralTech-700 max-w-2xl">
      I work at the intersection of QA, development, and automation — designing reliable systems, 
      improving engineering workflows, and building products that bring clarity and efficiency to teams.
    </p>

    <!-- CTAs -->
    <div class="flex gap-4">
      <Button href="/contact" size="lg">Contact</Button>
      <Button href="/services" variant="secondary" size="lg">Services</Button>
    </div>

    <!-- Seção de introdução -->
    <SectionTitle 
      title="A Structured and Purpose‑Driven Career"
      subtitle="Explore my experience, technologies, projects, products, and the evolution of my engineering journey"
    />

  </main>
</BaseLayout>
