---
import BaseLayout from "../layouts/BaseLayout.astro"
import SectionTitle from "../components/SectionTitle.astro"
import TimelineItem from "../components/TimelineItem.astro"
---

<BaseLayout title="Timeline">
  <main 
    class="py-paddingPage flex flex-col items-center gap-12"
    data-testid="timeline-page"
  >

    <div class="w-full max-w-3xl text-center" data-testid="timeline-header">
      <SectionTitle 
        class="items-center text-center [&>h2]:text-h1"
        title="Career Timeline"
        subtitle="A chronological view of my professional journey"
        data-testid="timeline-title"
      />
    </div>

    <div class="flex flex-col gap-8" data-testid="timeline-list">

      <div data-testid="timeline-item-1">
        <TimelineItem 
          year="2024"
          title="Quality Engineering Lead"
          description="Leading QA strategy and automation initiatives."
        />
      </div>

      <div data-testid="timeline-item-2">
        <TimelineItem 
          year="2023"
          title="Senior QA Engineer"
          description="Expanded automation coverage and CI/CD integration."
        />
      </div>

      <div data-testid="timeline-item-3">
        <TimelineItem 
          year="2022"
          title="QA Engineer"
          description="Developed testing frameworks and improved release quality."
        />
      </div>

      <div data-testid="timeline-item-4">
        <TimelineItem 
          year="2021"
          title="Junior QA Engineer"
          description="Executed test plans and contributed to regression suites."
        />
      </div>

      <div data-testid="timeline-item-5">
        <TimelineItem 
          year="2020"
          title="Intern"
          description="Assisted in manual testing and documentation."
        />
      </div>

    </div>

  </main>
</BaseLayout>
