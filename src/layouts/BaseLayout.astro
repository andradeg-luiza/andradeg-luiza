---
// src/layouts/BaseLayout.astro

import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const { title, description } = Astro.props

const pathname = Astro.url.pathname
const isEn = pathname === "/en" || pathname.startsWith("/en/")
const lang = isEn ? "en" : "pt-BR"
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Script Ãºnico de tema -->
    <script src="/scripts/theme.js" is:inline></script>
  </head>

  <body class="bg-brand-beige text-neutralTech-900 dark:bg-brand-wine dark:text-neutralTech-50 transition-colors duration-base">
    <Header />

    <main class="max-w-container mx-auto px-4 py-section">
      <slot />
    </main>

    <Footer />
  </body>
</html>
