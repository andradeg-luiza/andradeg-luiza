---
const social = [
  { href: "https://www.linkedin.com/in/andradegluiza/", icon: "linkedin", label: "LinkedIn", testid: "footer-linkedin" },
  { href: "https://github.com/andradeg-luiza", icon: "github", label: "GitHub", testid: "footer-github" },
  { href: "https://wa.me/5581994563827", icon: "whatsapp", label: "WhatsApp", testid: "footer-whatsapp" },
]

const linkBase =
  "transition-colors duration-base text-neutralTech-700 dark:text-neutralTech-200 hover:text-brand-wineMuted dark:hover:text-brand-beige"
---
<footer 
  class="w-full bg-brand-surface dark:bg-brand-wine border-t border-neutralTech-200 dark:border-neutralTech-800 mt-section transition-colors duration-base"
  data-testid="footer"
>
  <div class="max-w-[900px] mx-auto px-4 py-10 flex flex-col md:flex-row justify-between items-center gap-10">

    <!-- Home -->
    <a 
      href="/" 
      aria-label="Home"
      class="text-brand-wine dark:text-brand-beige hover:text-brand-wineMuted dark:hover:text-neutralTech-200 transition-colors duration-base"
      data-testid="footer-home"
    >
      <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 3 2 12h3v8h6v-5h2v5h6v-8h3z"/>
      </svg>
    </a>

    <!-- Social -->
    <div class="flex justify-center gap-6" data-testid="footer-social">
      {social.map(item => (
        <a 
          href={item.href}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={item.label}
          class={linkBase}
          data-testid={item.testid}
        >
          {item.icon === "linkedin" && (
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4.98 3.5A2.5 2.5 0 1 1 5 8.5a2.5 2.5 0 0 1 0-5ZM3 9h4v12H3Zm7 0h4v1.7h.1c.6-1.1 2-2.2 4.1-2.2 4.4 0 5.2 2.9 5.2 6.6V21h-4v-5.2c0-1.2 0-2.8-1.7-2.8s-2 1.3-2 2.7V21h-4Z"/>
            </svg>
          )}

          {item.icon === "github" && (
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .5C5.65.5.5 5.65.5 12c0 5.1 3.3 9.4 7.9 10.9.6.1.8-.3.8-.6v-2c-3.2.7-3.9-1.4-3.9-1.4-.5-1.2-1.2-1.6-1.2-1.6-1-.7.1-.7.1-.7 1.1.1 1.7 1.1 1.7 1.1 1 .1.6 2.1 2.6 2.1.6-1 .9-1.6.9-1.6-2.6-.3-5.3-1.3-5.3-5.8 0-1.3.5-2.4 1.2-3.3-.1-.3-.5-1.5.1-3.1 0 0 1-.3 3.3 1.2a11 11 0 0 1 6 0c2.3-1.5 3.3-1.2 3.3-1.2.6 1.6.2 2.8.1 3.1.8.9 1.2 2 1.2 3.3 0 4.5-2.7 5.5-5.3 5.8.4.3.9 1.1.9 2.3v3.4c0 .3.2.7.8.6A10.9 10.9 0 0 0 23.5 12C23.5 5.65 18.35.5 12 .5Z"/>
            </svg>
          )}

          {item.icon === "whatsapp" && (
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0a12 12 0 0 0-10.3 18.2L0 24l6-1.6A12 12 0 1 0 12 0Zm0 21.8a9.8 9.8 0 0 1-5-1.4l-.4-.2-3.6 1 1-3.5-.2-.4A9.8 9.8 0 1 1 12 21.8Zm5.4-7.3c-.3-.2-1.7-.9-2-1-.3-.1-.5-.2-.7.2-.2.3-.8 1-.9 1.1-.2.2-.3.2-.6.1-.3-.2-1.2-.4-2.3-1.4-.9-.8-1.4-1.7-1.6-2-.2-.3 0-.5.1-.6l.5-.6c.2-.2.2-.3.3-.5.1-.2 0-.4 0-.5 0-.2-.7-1.7-1-2.3-.3-.6-.5-.5-.7-.5h-.6c-.2 0-.5.1-.7.3-.2.3-1 1-1 2.4s1 2.8 1.1 3c.2.2 2 3.1 4.8 4.3 2.8 1.2 2.8.8 3.3.7.5 0 1.7-.7 1.9-1.3.2-.6.2-1.2.2-1.3 0-.1-.2-.2-.5-.4Z"/>
            </svg>
          )}
        </a>
      ))}
    </div>

    <!-- Copyright -->
    <p 
      class="text-small text-neutralTech-600 dark:text-neutralTech-300 text-center md:text-right"
      data-testid="footer-text"
    >
      © {new Date().getFullYear()} Luiza Gusmão — All rights reserved.
    </p>

  </div>
</footer>
