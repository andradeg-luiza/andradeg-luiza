---
const props = Astro.props

const {
  src,
  alt = "",
  size = "md",
  bordered = false,
  ...rest
} = props

const sizes = {
  sm: "w-12 h-12",
  md: "w-20 h-20",
  lg: "w-32 h-32",
  xl: "w-48 h-48"
}

const sizeClass = sizes[size] ?? sizes.md

const borderClass = bordered
  ? "border-2 border-neutralTech-300 dark:border-neutralTech-700 transition-colors duration-base"
  : ""
---

<div 
  class={`rounded-full overflow-hidden ${sizeClass} ${borderClass}`} 
  {...rest}
>
  <img 
    src={src} 
    alt={alt} 
    class="w-full h-full object-cover"
    loading="lazy"
    decoding="async"
  />
</div>
