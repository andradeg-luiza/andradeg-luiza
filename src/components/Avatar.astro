---
const {
  src,
  alt = "",
  size = "md",
  bordered = false
} = Astro.props

const sizes = {
  sm: "w-12 h-12",
  md: "w-20 h-20",
  lg: "w-32 h-32",
  xl: "w-48 h-48"
}

const borderClass = bordered
  ? "border-2 border-neutralTech-300 dark:border-neutralTech-700 transition-colors duration-base"
  : ""
---

<div class={`rounded-full overflow-hidden ${sizes[size]} ${borderClass}`}>
  <img 
    src={src} 
    alt={alt} 
    class="w-full h-full object-cover"
    loading="lazy"
  />
</div>
