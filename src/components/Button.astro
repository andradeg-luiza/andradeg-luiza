---
const {
  variant = "primary",
  size = "md",
  href = null,
  type = "button",
  children,
  onclick = null,
} = Astro.props

const base =
  "inline-flex items-center justify-center rounded-sm font-medium transition-colors duration-base ease-linearish"

/* Variantes FIXAS — não mudam com o tema */
const variants = {
  darkMode: "bg-brand-wine text-brand-beige border border-brand-beige hover:bg-brand-wineMuted",
  lightMode: "bg-brand-beige text-brand-wine border border-brand-wine hover:bg-brand-surface",

  /* Mantive as variantes originais caso use em outros lugares */
  primary: "bg-brand-wine text-brand-beige hover:bg-brand-wineMuted",
  secondary: "bg-neutralTech-50 text-neutralTech-900 border border-neutralTech-300 hover:bg-neutralTech-100",
}

const sizes = {
  sm: "px-3 py-1.5 text-small",
  md: "px-4 py-2 text-body",
  lg: "px-5 py-3 text-h4",
}

const classes = `${base} ${variants[variant] ?? variants.primary} ${sizes[size] ?? sizes.md}`
---

{href ? (
  <a 
    href={href} 
    class={classes} 
    {...(onclick ? { onclick } : {})}
  >
    {children}
  </a>
) : (
  <button 
    type={type} 
    class={classes} 
    {...(onclick ? { onclick } : {})}
  >
    {children}
  </button>
)}
