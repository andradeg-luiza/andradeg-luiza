---
const {
  variant = "primary",
  size = "md",
  href = null,
  type = "button",
  children
} = Astro.props

// Variantes
const base =
  "inline-flex items-center justify-center rounded-sm font-medium transition-colors fast ease-linearish"

const variants = {
  primary: "bg-brand-wine text-neutralTech-50 hover:bg-brand-wineMuted",
  secondary:
    "border border-neutralTech-300 text-neutralTech-800 bg-neutralTech-50 hover:bg-neutralTech-100"
}

// Tamanhos
const sizes = {
  sm: "px-3 py-1.5 text-small",
  md: "px-4 py-2 text-body",
  lg: "px-5 py-3 text-h4"
}

const classes = `${base} ${variants[variant]} ${sizes[size]}`
---

{href ? (
  <a href={href} class={classes}>
    {children}
  </a>
) : (
  <button type={type} class={classes}>
    {children}
  </button>
)}
