---
const {
  title,
  description,
  icon = null,
  href = null,
  cta = "Saiba mais"
} = Astro.props
---

<div class="bg-brand-surface dark:bg-brand-wine border border-neutralTech-200 dark:border-neutralTech-700 rounded-md p-4 shadow-soft transition-colors duration-base hover:border-neutralTech-300 dark:hover:border-neutralTech-500">
  <div class="flex flex-col gap-3">

    {icon && (
      <div class="text-brand-wine dark:text-brand-beige text-h3 transition-colors duration-base">
        {icon}
      </div>
    )}

    <h3 class="text-h3 text-brand-wine dark:text-brand-beige transition-colors duration-base">
      {title}
    </h3>

    {description && (
      <p class="text-body text-neutralTech-700 dark:text-neutralTech-200 transition-colors duration-base">
        {description}
      </p>
    )}

    {href && (
      <a 
        href={href}
        class="text-body text-brand-wine dark:text-brand-beige transition-colors duration-base hover:text-brand-wineMuted dark:hover:text-neutralTech-200"
      >
        {cta} â†’
      </a>
    )}
  </div>
</div>
