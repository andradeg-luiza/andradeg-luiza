---
const { title, subtitle } = Astro.props
---

<div class="flex flex-col gap-1">
  <h2 class="text-h2 md:text-h1 font-semibold text-brand-wine dark:text-brand-beige transition-colors duration-base">
    {title}
  </h2>

  {subtitle && (
    <p class="text-body md:text-h4 text-neutralTech-700 dark:text-neutralTech-200 transition-colors duration-base">
      {subtitle}
    </p>
  )}
</div>
